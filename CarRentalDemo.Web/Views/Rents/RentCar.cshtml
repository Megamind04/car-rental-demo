@model CarRentalDemo.Web.Models.SelectedCarForRentModel
@{
    ViewBag.Title = "RentCar";
}

<div class="container rent-content">
    <h2>Rent Car</h2>
</div>
<br />

@Html.Partial("_CarDetailsPartial", Model.SelectedCar)

<br />
<div class="container rent-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.RentedCar.CarID)
            @Html.HiddenFor(model => model.RentedCar.DateOfRent)
            @Html.HiddenFor(model => model.RentedCar.DateOfReturn)
            @Html.HiddenFor(model => model.RentedCar.Price)
            
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.RentedCar.DateOfRent, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.RentedCar.DateOfRent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RentedCar.DateOfRent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RentedCar.DateOfReturn, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.RentedCar.DateOfReturn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RentedCar.DateOfReturn, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RentedCar.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.RentedCar.Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RentedCar.Price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.RentedCar.PayMetod, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.RentedCar.PayMetod, new List<SelectListItem> {
               new SelectListItem{Text="Visa", Value="Visa",Selected=true},
               new SelectListItem{Text="PayPal", Value="PayPal",Selected=false},
               new SelectListItem{Text="MasterCard", Value="MasterCard",Selected=false}
                  }, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RentedCar.PayMetod, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Next" class="btn btn-success" />
                </div>
            </div>

        </div>
    }
</div>
